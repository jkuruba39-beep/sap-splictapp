<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog 
        id="filterDialog" 
        title="Filter Orders"
        contentWidth="500px"
        contentHeight="400px"
        stretch="false"
    >

        <VBox class="sapUiSmallMargin">

            <Label text="Enter Order ID" />
            <Input id="orderIdInput"
                   showValueHelp="true"
                   valueHelpRequest=".onOrderIdValueHelp" />

            <Label text="Enter Customer Name" />
            <Input id="customerNameInput"
                   showValueHelp="true"
                   valueHelpRequest=".onCustomerNameValueHelp" />

            <Label text="Enter Category" />
            <Input id="categoryInput"
                   showValueHelp="true"
                   valueHelpRequest=".onCategoryValueHelp" />

        </VBox>

        <Button type="Transparent" text="Clear Fields" press=".onClearFilter" />

        <beginButton>
            <Button  type="Accept" text="Apply" press=".onApply" />
        </beginButton>

        <endButton>
            <Button  type="Reject" text="Cancel" press=".onCancel" />
        </endButton>

    </Dialog>
</core:FragmentDefinition>
